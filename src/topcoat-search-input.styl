@import search-input
/* topdoc
  name: Search Input
  description: A text input designed for searching.
  modifiers:
    :disabled: Disabled state
  markup:
    <input type="search" value="" placeholder="search" class="topcoat-search-input">
    <input type="search" value="" placeholder="search" class="topcoat-search-input" disabled>
  tags:
    - desktop
    - light
    - mobile
    - text
    - input
    - search
    - form
*/

.topcoat-search-input
  @extend .search-input
  height var-height
  border var-border
  background-color var-background-color
  box-shadow var-box-shadow--down
  color var-color
  padding: 0 0 0 2.7em
  border-radius var-border-radius--large
  background-image var-background-image--search-input
  background-position 1em center
  background-repeat no-repeat
  background-size var-font-size

.topcoat-search-input:focus
  background-image var-background-image-alt--search-input
  background-color var-background-color--text-input--focus
  color var-color--focus

.topcoat-search-input::-webkit-search-cancel-button,
.topcoat-search-input::-webkit-search-decoration,
.topcoat-search-input--large::-webkit-search-cancel-button,
.topcoat-search-input--large::-webkit-search-decoration
  margin-right 5px

.topcoat-search-input:focus::-webkit-input-placeholder,
.topcoat-search-input:focus::-webkit-input-placeholder
  color var-placeholder-color--input

/* topdoc
  name: Large Search Input
  description: A large text input designed for searching.
  modifiers:
    :disabled: Disabled state
  markup:
    <input type="search" value="" placeholder="search" class="topcoat-search-input--large">
    <input type="search" value="" placeholder="search" class="topcoat-search-input--large" disabled>
  tags:
    - desktop
    - light
    - mobile
    - text
    - input
    - search
    - form
    - large
*/

.topcoat-search-input--large
  @extend .topcoat-search-input
  height var-height--large
  font-size var-font-size--large
  font-weight var-font-weight
  padding-left 2.8em
  border-radius var-border-radius--huge
  background-position 1.2em center
  background-size var-font-size--large

.topcoat-search-input--large:focus
  @extend .topcoat-search-input:focus
